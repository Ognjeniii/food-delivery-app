@page
@model Diplomski.Pages.Admin.Category.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Poppins&display=swap" rel="stylesheet">
<style>
    h1 {
        font-family: 'Montserrat', sans-serif;
    }

    body {
        background-color: #E4EFE7;
    }

    .veliki-cont{
        margin-left: 245px;
        border: 3px solid #206A5D;
        width: 1000px;
        padding-bottom: 50px;
        border-radius: 20px;
    }

    .moj-cont {
        padding: 50px 0 0 100px;
    }
</style>

<div>
    <a asp-page="Index"><img src="~/images/back1.png" class="img-fluid m-3" style="width:35px;" /></a>
</div>
<div class="veliki-cont">
    <h1 class="text-center m-5 text-decoration-underline">Brisanje</h1>
    <div class="container moj-cont">
        <h3 class="mb-5">Da li ste sigurni da želite da obrišete ovu kategoriju hrane?</h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FoodCategory.FoodCategoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodCategory.FoodCategoryName)
                </dd>
            </dl>
    
            <form method="post">
                <input type="hidden" asp-for="FoodCategory.Id" />
                <input type="submit" value="Obriši" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
