@page
@model Diplomski.Pages.Admin.Category.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Poppins&display=swap" rel="stylesheet">

<style>
    h1{
        font-family:'Montserrat', sans-serif;
    }

    body {
        background-color: #E4EFE7;
    }
</style>

<h1 class="text-center m-5 text-decoration-underline">Sve kategorije</h1>


<div class="container">
    <p>
        <a asp-page="Create" class="btn btn-outline-dark">Napravi novu kategoriju</a>
    </p>
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FoodCategory[0].FoodCategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.FoodCategory) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodCategoryName)
                </td>
                <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id"><img src="~/images/edit.png" style="width:30px;" /></a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id"><img src="~/images/delete.png" style="width:30px;" /></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>