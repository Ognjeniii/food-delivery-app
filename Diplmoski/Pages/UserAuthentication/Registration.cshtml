@page
@model Diplomski.Pages.UserAuthentication.RegistrationModel
@{
    ViewData["Title"] = "Registracija";
    Layout = null;
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Poppins&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />


<style>
    body{
        background-color: #FDFAF6;
    }

    .container{
        background-color: #E4EFE7;
        border: 2px solid #206A5D;
        border-radius: 20px;
        padding: 10px;
    }

    h1
     {
        font-family: 'Montserrat', sans-serif;
     }

     .moj-cont{
         margin-top: 50px;
         padding-top: 20px;
     }

     .slika{
         width: 450px;
     }
</style>


<div class="container shadow moj-cont">
    <h1 class="text-center m-2">Registracija</h1>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Ime</label>
                    <input type="text" class="form-control" asp-for="Input.Name" />
                    <span class="text-danger" asp-validation-for="Input.Name"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Korisničko ime</label>
                    <input type="text" class="form-control" asp-for="Input.Username" />
                    <span class="text-danger" asp-validation-for="Input.Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="Input.Email" />
                    <span class="text-danger" asp-validation-for="Input.Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Lozinka</label>
                    <input type="password" class="form-control" asp-for="Input.Password" />
                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ponovljena lozinka</label>
                    <input type="password" class="form-control" asp-for="Input.PasswordConfirmed" />
                    <span class="text-danger" asp-validation-for="Input.PasswordConfirmed"></span>
                </div>

                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-dark">Registruj se</button>
                    <a class="text-dark text-decoration-none d" href="/UserAuthentication/Login">Već imaš nalog?</a>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="mb-3">
                        <span class="text-danger mb-3">@TempData["msg"]</span>
                    </div>
                }
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/images/registration.jpg" class="img-fluid slika" />
        </div>
    </div>
</div>
