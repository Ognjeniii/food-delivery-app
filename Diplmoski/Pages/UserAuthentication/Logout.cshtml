@page
@model Diplomski.Pages.UserAuthentication.LogoutModel
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Poppins&display=swap" rel="stylesheet">
<link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />

<style>
    h1{
        font-family: 'Montserrat', sans-serif;
    }
    
    .tekst{
        font-size: 150%;
    }

    body {
        background-color: #FDFAF6;
    }

    .veliki-div{
        background-color: #E4EFE7;
        border-radius: 15px;
        border: 2px solid #206A5D;
        padding: 0 0 20px 20px;
        width: 1000px;
        margin: 100px 0 0 245px;
    }

    .dugme{
        padding-top: 200px; 
    }

    button{
        margin-left: 200px;
    }

</style>

<div class="veliki-div shadow">
    <h1 class="text-center m-3 text-decoration-underline">Odjava</h1>
    <div class="row">
        <div class="col-md-6 dugme">
            <form method="post">
                <p class="tekst">Da li ste sigurni da želite da se odjavite?</p>
                <button type="submit" class="btn btn-lg btn-outline-danger">DA!</button>
            </form>
        </div>
        <div class="col-md-6 ">
            <img src="~/images/logout.jpg" class="img-fluid" style="width:350px;" />
        </div>
    </div>
</div>