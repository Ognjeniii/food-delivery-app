@page
@model Diplomski.Pages.UserAuthentication.LoginModel
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Poppins&display=swap" rel="stylesheet">
<link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />

<style>
    body {
        background-color: #FDFAF6;
    }

    h1{
        font-family: 'Montserrat', sans-serif;
    }

    .container {
        background-color: #E4EFE7;
        border-radius: 15px;
        border: 2px solid #206A5D;
        padding: 10px;
    }

    .moj-cont{
        margin-top: 50px;
        padding-top:20px;
        width: 1000px;
    }

    .slika{
        width: 350px;
        margin-right: 50px;
    }

    .dugmici{
        margin-top: 100px;
    }
</style>


<div class="container shadow moj-cont">
    <h1 class="text-center m-2">Prijava</h1>
    <div class="row pt-5">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3 p-2">
                    <label class="from-label">Korisničko ime</label>
                    <input type="text" asp-for="Input.Username" class="form-control"/>
                    <span class="text-danger" asp-validation-for="Input.Username"></span>
                </div>
                <div class="mb-3 p-2">
                    <label class="from-label">Lozinka</label>
                    <input type="password" asp-for="Input.Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Username"></span>
                </div>
                <div class="p-2 d-flex justify-content-between dugmici">
                    <input type="submit" value="Prijavi se" class="btn btn-outline-dark"/>
                    <a href="/UserAuthentication/Registration" class="text-dark text-decoration-none">Nisi korisnik? <b class="text-muted">Registruj se!</b></a>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div>
                        <span class="text-danger mb-3">@TempData["msg"]</span>
                    </div>
                }
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/images/login.png" class="img-fluid slika" />
        </div>
    </div>
</div>